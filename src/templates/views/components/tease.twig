
<article block="tease" mods="type:{{post.post_type}}" id="tease-{{post.ID}}" role="article">  <!-- post_class() -->
	{% block content %}
		<header elem="header">
			<h2 elem="title" itemprop="headline"><a href="{{post.link}}">{{post.title}}</a></h2>
		</header> 
		<section elem="content" itemprop="articleBody">
			<p>{{post.preview}}</p>
			{% if post.get_thumbnail %}
				<img src="{{post.thumbnail.src}}" />
			{% endif %}
		</section>
		<footer elem="footer">
		</footer>
	{% endblock %}
</article>	
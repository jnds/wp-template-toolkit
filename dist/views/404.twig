{% extends 'base.twig' %}

{# START Body #}
{% block body %}

    {# START App #}
    {% embed 'components/app.twig' %} 

        {# START Header #}
        {% block header %}
            {% include 'components/header.twig' %}
        {% endblock %}
        {# END Header #}

        {# START Content #}
        {% block content %}
             
			<article id="post-not-found" class="article">
				<header class="article__header">
					<h1 itemprop="headline" class="article__title">404</h1>
				</header> 
				<section itemprop="articleBody" class="article__content">
					<h3>We couldn't find what you are looking for.</h3>
					<p>please try searching.</p>
				</section>
				<footer class="article-footer">
				</footer>
			</article>
		
        {% endblock %}
        {# END Content #}

        {# START Footer #}
        {% block footer %}
            {% include 'components/footer.twig' %}
        {% endblock %}
        {# END Footer #}
    
    {% endembed %}
    {# END App #}

{% endblock %}
{# END Body #}